@page
@model NextBuy.Areas.Admin.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Supprimer le Produit";
}

<h1>Supprimer le Produit</h1>
<h3>Êtes-vous sûr de vouloir supprimer ce produit ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price) MAD
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Category.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Retour</a>
    </form>
</div>
