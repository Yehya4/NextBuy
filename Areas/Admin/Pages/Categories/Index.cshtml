@page
@model NextBuy.Areas.Admin.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Gérer les Catégories";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Catégories</h1>
    <a asp-page="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Nouvelle Catégorie</a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-auto">
                <input type="text" asp-for="SearchString" class="form-control" placeholder="Rechercher...">
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-secondary">Rechercher</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Category[0].Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Category[0].Description)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Category) {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
