@page
@model NextBuy.Areas.Admin.Pages.Orders.DetailsModel

@{
    ViewData["Title"] = "Détails de la Commande";
}

<h1>Détails de la Commande #@Model.Order.Id</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header">Info Client</div>
            <div class="card-body">
                <p><strong>Nom:</strong> @Model.Order.User?.FirstName @Model.Order.User?.LastName</p>
                <p><strong>Email:</strong> @Model.Order.User?.Email</p>
                <p><strong>Téléphone:</strong> @Model.Order.User?.PhoneNumber</p>
                <p><strong>Adresse:</strong> @Model.Order.User?.Address, @Model.Order.User?.City</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header">Info Commande</div>
            <div class="card-body">
                <p><strong>Date:</strong> @Model.Order.OrderDate</p>
                <p><strong>Status:</strong> @Model.Order.Status</p>
                <p><strong>Total:</strong> @Model.Order.TotalAmount.ToString("C")</p>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header">Articles</div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantité</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Order.OrderItems)
                {
                    <tr>
                        <td>@item.Product?.Name</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@((item.Price * item.Quantity).ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index" class="btn btn-secondary">Retour</a>
</div>
