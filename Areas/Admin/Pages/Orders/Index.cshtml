@page
@model NextBuy.Areas.Admin.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Gérer les Commandes";
}

<h1>Commandes</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Client</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Order) {
                        <tr>
                            <td>#@item.Id</td>
                            <td>@item.User?.Email <br> <small class="text-muted">@item.User?.FirstName @item.User?.LastName</small></td>
                            <td>@item.OrderDate.ToShortDateString()</td>
                            <td>@item.TotalAmount.ToString("C")</td>
                            <td>
                                @if(item.Status == "En attente")
                                {
                                    <span class="badge bg-warning text-dark">@item.Status</span>
                                }
                                else if(item.Status == "Expédiée")
                                {
                                    <span class="badge bg-info text-dark">@item.Status</span>
                                }
                                else if(item.Status == "Livrée")
                                {
                                    <span class="badge bg-success">@item.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Status</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                        Changer Status
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@item.Id" asp-route-status="En attente">
                                                <button class="dropdown-item" type="submit">En attente</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@item.Id" asp-route-status="Expédiée">
                                                <button class="dropdown-item" type="submit">Expédiée</button>
                                            </form>
                                        </li>
                                        <li>
                                            <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@item.Id" asp-route-status="Livrée">
                                                <button class="dropdown-item" type="submit">Livrée</button>
                                            </form>
                                        </li>
                                         <li>
                                            <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@item.Id" asp-route-status="Annulée">
                                                <button class="dropdown-item text-danger" type="submit">Annulée</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
