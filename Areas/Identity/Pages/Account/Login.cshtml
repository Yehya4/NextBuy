@page
@model NextBuy.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<div class="container" data-aos="fade-down">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-primary text-white text-center py-4 rounded-top">
                    <h3 class="font-weight-light my-2 fw-bold"><i class="fas fa-sign-in-alt me-2"></i>Connexion</h3>
                </div>
                <div class="card-body p-5">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.UserName" class="form-control" placeholder="Nom d'utilisateur" />
                            <label asp-for="Input.UserName">Nom d'utilisateur</label>
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" placeholder="Mot de passe" />
                            <label asp-for="Input.Password">Mot de passe</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label text-muted" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg shadow-sm">Se connecter</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light rounded-bottom">
                    <div class="small"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary text-decoration-none">Pas encore de compte ? Inscrivez-vous !</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
