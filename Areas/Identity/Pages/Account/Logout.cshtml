@page
@model NextBuy.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Déconnexion";
}

<div class="container" data-aos="zoom-in">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center mt-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success fa-5x"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Déconnecté</h2>
                    <p class="lead text-muted mb-4">Vous avez été déconnecté avec succès. À bientôt !</p>
                    <a asp-page="/Index" class="btn btn-primary btn-lg shadow-sm">
                        <i class="fas fa-home me-2"></i>Retour à l'accueil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
