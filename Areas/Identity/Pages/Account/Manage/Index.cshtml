@page
@model NextBuy.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = "Index";
}

<div class="container py-5" data-aos="fade-up">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-user-circle"></i> @ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <partial name="_StatusMessage" model="Model.StatusMessage" />
                    
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Nom d'utilisateur</label>
                            <input asp-for="Username" class="form-control" disabled />
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Input.FirstName" class="form-label"></label>
                                <input asp-for="Input.FirstName" class="form-control" />
                                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Input.LastName" class="form-label"></label>
                                <input asp-for="Input.LastName" class="form-control" />
                                <span asp-validation-for="Input.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.City" class="form-label"></label>
                            <input asp-for="Input.City" class="form-control" />
                            <span asp-validation-for="Input.City" class="text-danger"></span>
                        </div>

                        <button id="update-profile-button" type="submit" class="btn btn-primary w-100">Enregistrer</button>
                    </form>
                </div>
            </div>
            
            <div class="mt-4 text-center">
                <a asp-page="/MyOrders/Index" class="btn btn-outline-primary"><i class="fas fa-box"></i> Voir mes commandes</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
