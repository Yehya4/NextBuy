@page
@model NextBuy.Pages.ContactModel
@{
    ViewData["Title"] = "Contactez-nous";
}

<div class="container py-5">
    <div class="text-center mb-5" data-aos="fade-down">
        <h1 class="display-4 fw-bold text-primary">Contactez-nous</h1>
        <p class="lead text-muted">Une question ? Une suggestion ? N'hésitez pas à nous écrire.</p>
    </div>

    <div class="row g-5">
        <div class="col-md-6" data-aos="fade-right">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-5">
                    <h3 class="mb-4">Informations</h3>
                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0 btn-square bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="mb-1">Adresse</h5>
                            <p class="text-muted mb-0">123 Rue de Commerce, Casablanca, Maroc</p>
                        </div>
                    </div>
                    <div class="d-flex mb-4">
                        <div class="flex-shrink-0 btn-square bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="fas fa-phone-alt"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="mb-1">Téléphone</h5>
                            <p class="text-muted mb-0">+212 6 00 00 00 00</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="flex-shrink-0 btn-square bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="mb-1">Email</h5>
                            <p class="text-muted mb-0">contact@nextbuy.ma</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6" data-aos="fade-left">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-5">
                    <h3 class="mb-4">Envoyez-nous un message</h3>
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="name" placeholder="Votre nom" required>
                                    <label for="name">Votre nom</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" placeholder="Votre email" required>
                                    <label for="email">Votre email</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="subject" placeholder="Sujet" required>
                                    <label for="subject">Sujet</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Laissez un message ici" id="message" style="height: 150px" required></textarea>
                                    <label for="message">Message</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Envoyer le message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
